/* pages/story/list/index.wxss */
.container {
    display: flex;
    flex-direction: column;
  }
  /* 宣传海报样式 */
  .poster {
    width: 100%; /* 确保海报宽度铺满屏幕 */
  }
  
  .poster-image {
    width: 100%; /* 宽度铺满 */
    height: 45ch;
  }
.swiper-container {
    
    background-size: 750rpx 364rpx;
  }
  
  swiper {
    width: 690rpx;
    height: 305rpx;
    margin: 10rpx auto;
  }
  
  .slide-image {
    width: 100%;
    height: 305rpx;
    border-radius: 15rpx;
  }  
  /* 社团宣传按钮样式 */
  .joinUs {
    display: flex;
    justify-content: center; /* 水平居中 */
    align-items: center; /* 垂直居中 */
    background-color: #C5A1F7;
  }
  
  .joinUsTag {
    display: flex;
    justify-content: space-around; /* 按钮之间保持间距 */
  }
  
  .joinUsButton {
    border: none;
    outline: none;
    background-color: #815aee; /* 按钮背景颜色 */
    color: white;
    border-radius: 30px; /* 圆角边框，改变为椭圆形 */
    width: 100px; /* 调整宽度 */
    height: 30px; /* 调整高度 */
    text-align: center; /* 文字居中 */
    font-size: 16px; /* 增大字体大小 */
    padding: 15px; /* 内边距 */
    margin: 10px 20px; /* 外边距 */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
    transition: background-color 0.3s, transform 0.3s; /* 添加过渡效果 */
}


  /* 热门活动文本样式 */
  .popular-activity {
    font-size: 18px; /* 字体大小 */
    font-weight: bold; /* 字体加粗 */
    color: #333; /* 字体颜色 */
    margin: 20px 0; /* 上下边距 */
    text-align: center; /* 文字居中 */
    border: 1px solid #e1e1e1; /* 添加边框，颜色为浅灰色 */
    padding: 10px; /* 内边距，使文本与边框保持一定距离 */
    display: inline-block; /* 使边框包裹文本 */
  }
  /* 活动列表样式 */
  .activity-list {
    display: flex;
    flex-direction: column;
  }
  
  .activity-card {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    border: 1px solid #ccc; /* 边框 */
    border-radius: 5px; /* 圆角边框 */
    margin-bottom: 10px; /* 卡片之间的间距 */
  }
  .activity-image-wrapper {
    width: 45%; /* 图片占45% */
    position: relative;
}

.activity-image {
    width: 95%; /* 图片宽度填满容器 */
    height: auto;
    border-radius: 5px 5px 5px 5px; /* 只给左边缘圆角，如果需要 */
    position: absolute;
    top: 0;
    left: 0;
    right: 10px;
    bottom: 0;
}

.activity-image-wrapper::before {
    content: "";
    display: block;
    padding-bottom: 75%; /* 4:3 高宽比 */
}
  
  .activity-details {
    width: 50%; /* 文字部分占55% */
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* 保证footer在底部 */
    flex: 1; /* 占满剩余空间 */
    min-height: 150px; /* 设置最小高度以避免上移 */
}
  
  .activity-title {
    font-size: 16px; /* 字体大小 */
    font-weight: bold; /* 字体加粗 */
  }
  
  .activity-description {
    font-size: 14px; /* 字体大小 */
    color: #666; /* 字体颜色 */
  }
  
  .activity-footer {
    display: flex;
    justify-content: space-between;
    align-items:baseline;
    margin-top: auto; /* 将footer推到容器底部 */
  }
  
  .activity-time {
    font-size: 12px; /* 字体大小 */
    color: #999; /* 字体颜色 */
  }
  
  .detail_info {
    border: none;
    outline: none;
    background-color: #C5A1F7; /* 按钮背景颜色 */
    color: white;
    font-size: 11px;
    border-radius: 5px; /* 圆角边框 */
    padding: 1px 5px; /* 内边距 */
  }

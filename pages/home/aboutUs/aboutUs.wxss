.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.banner {
    width: 100%;
    position: relative;
}

.banner-image {
    width: 100%;
    height: 45ch;

}

.banner-title {
    position: absolute;
    bottom: 10px;
    left: 20px;
    color: white;
    font-size: 24px;
    font-weight: bold;
}

.section {
    width: 95%;
    margin: 10px;
    padding: 10px;
}

.section-title {
    font-size: 20px;
    color: #333;
    margin-bottom: 5px;
}

.section-content {
    font-size: 16px;
    color: #666;
}

.activity-scroll-view {
    display: flex;
    overflow-x: scroll;
}

.activity-card {
    width: 160px;
    margin-right: 10px;
}

.activity-image {
    width: 160px;
    height: 90px;
}

.join-button {
    background-color: #007aff;
    color: white;
    padding: 10px;
    margin-top: 10px;
}

.poster-image {
    width: 100%; /* 宽度铺满 */
    height: 45ch;
  }
.swiper-container {
    
    background-size: 750rpx 364rpx;
  }
  

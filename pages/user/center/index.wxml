<!--pages/user/center/index.wxml-->
<view class="container relative bg-grey">
  <!-- 用户信息 -->
  <view class="user-card grey bg-white">
    <view class="basic">
      <view class="avatar">
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <view>
        <view class="nickname black">
          <open-data type="userNickName"></open-data>
        </view>
        <view class="sex">
          <open-data lang="zh_CN" type="userGender"></open-data>
        </view>
      </view>
    </view>
    <view class="contact">
      <view class="tel">
        15863008280
        <view class="txt">手机号</view>
      </view>
      <view class="email">
        15863008280@126.com
        <view class="txt">邮箱</view>
      </view>
    </view>
  </view>
  <!-- 我的订单 -->
  <view class="user-order bg-white">
    <view class="title">我的报名</view>
    <view class="content">
      <!-- 用来显示我本人的报名 -->
      <scroll-view scroll-x="true" class="show-photo" wx:if="{{type==1}}">
        <view class="allcat-photo" style="{{item.id!=6?'margin-right:16px;':'margin-right:27px;'}}" wx:for="{{allcat_url}}" data-id="{{item.id}}" bindtap="chooseCat">
          <!--猫咪头像-->
          <image class="lower-cat-photo {{cat_index==item.id?'lowerCat-photo-active':''}}" src="{{item.url}}" />
          <!--打勾-->
          <image class="hook-icon" src="../../static/icon/hook.png" wx:if="{{cat_index==item.id}}" />
        </view>
      </scroll-view>
    </view>
  </view>
  <!-- 菜单栏 -->
  <view class="menu-list bg-white">
    <navigator class="li">
      <image class="item-icon" src="../../../icons/icon-fav.png"></image>
      <text class="item-txt">我的收藏</text>
      <text class="iconfont icon-jinrujiantou"></text>
    </navigator>
    <navigator class="li">
      <image class="item-icon" src="../../../icons/icon-info.png"></image>
      <text class="item-txt">关于我们</text>
      <text class="iconfont icon-jinrujiantou"></text>
    </navigator>
    <navigator class="li">
      <image class="item-icon" src="../../../icons/icon-question.png"></image>
      <text class="item-txt">常见问题</text>
      <text class="iconfont icon-jinrujiantou"></text>
    </navigator>
  </view>
</view>
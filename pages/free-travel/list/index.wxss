/* pages/setout/list/index.wxss */

.container.freeze {
  height: 100vh;
  overflow: hidden;
}

.container.freeze .shadow {
  display: block;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 50;
}

.tab-title {
  font-size: 28rpx;
  text-align: center;
  background-color: #30a9de;
  padding: 10rpx 0;
  line-height: 55rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tab-title scroll-view {
  overflow: auto;
  white-space: nowrap;
  width: 90%;
}

.tab-item {
  display: inline-block;
  border-bottom: 2rpx solid #30a9de;
  margin: 0 30rpx;
}

.tab-item.active {
  font-weight: bold;
  border-bottom: 4rpx solid #ffd11b;
}

.icon-sousuoxiao {
  padding-right: 20rpx;
}

/* 列表 */

.tab-content .goods-list {
  width: 90%;
  margin: 30rpx auto;
}

.goods-list .li {
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.15);
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.photo image {
  width: 100%;
  height: 420rpx;
  display: block;
}

.photo .tag {
  position: absolute;
  left: 0;
  top: 0;
  font-size: 26rpx;
  padding: 10rpx 24rpx;
  background-color: #ffd11b;
  color: #333;
  border-bottom-right-radius: 15rpx;
}

.photo::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50%;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
}

.photo .start-time {
  position: absolute;
  bottom: 10rpx;
  left: 20rpx;
  font-size: 24rpx;
  z-index: 10;
}

.title-box {
  padding: 20rpx;
  background-color: white;
  font-size: 24rpx;
}

.title-box .title {
  font-size: 28rpx;
  padding-bottom: 10rpx;
}

.title-box .info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 搜索模态框 */

.search-modal {
  position: fixed;
  right: 0;
  top: 0;
  z-index: 100;
  width: 80%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  overflow: auto;
  background-color: white;
  transition: all 0.5s;
  visibility: hidden;
  transform: translateX(100%);
}

.search-modal.active {
  visibility: visible;
  transform: translateX(0%);
}

.search-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.search-box .input {
  flex: 6;
  background-color: rgb(238, 238, 238);
  padding: 11rpx 16rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
}

.search-box .btn {
  margin-left: 10rpx;
  flex: 1;
  padding: 5rpx 14rpx;
}

.search-modal .title {
  font-size: 36rpx;
  margin-top: 40rpx;
}

.suggest .section, .hot-fav .section {
  padding-top: 20rpx;
}

.suggest .name, .hot-fav .name {
  font-size: 34rpx;
  padding: 20rpx 0;
}

.suggest .list, .hot-fav .list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.suggest .li, .hot-fav .li {
  padding: 15rpx 30rpx;
  background-color: #eee;
  margin: 20rpx 30rpx 0 0;
  border-radius: 6rpx;
  font-size: 32rpx;
}

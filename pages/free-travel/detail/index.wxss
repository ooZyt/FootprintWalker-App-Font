/* pages/setout/detail/index.wxss */

.container {
  padding-bottom: 100rpx;
}

/* 轮播图 */

swiper {
  height: 465rpx;
  margin: 0 auto;
}

.slide-image {
  width: 100%;
  height: 465rpx;
}

/* 基本信息 */

.basic-info {
  padding: 0 40rpx;
}

.tag-box {
  padding: 20rpx 0 30rpx;
}

.tag-box .tag {
  padding: 8rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 40rpx;
  display: inline-block;
  font-size: 24rpx;
}

.tag-box .tag:nth-child(3n+1) {
  background-color: #f4f3e5;
}

.tag-box .tag:nth-child(3n+2) {
  background-color: #e5f3f4;
}

.tag-box .tag:nth-child(3n+3) {
  background-color: #f2f2f2;
}

.basic-info .title {
  font-size: 48rpx;
  padding-bottom: 50rpx;
  line-height: 68rpx;
}

.basic-info .date-time, .basic-info .location {
  padding-bottom: 20rpx;
  font-size: 33rpx;
  display: flex;
  align-items: center;
}

.date-time .icon-month {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.advisor {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  padding-top: 30rpx;
}

.advisor .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.advisor .name {
  margin-bottom: 6rpx;
}

.advisor-message {
  margin-top: 20rpx;
  padding-top: 33rpx;
  padding-bottom: 60rpx;
}

.advisor-message .triangle {
  position: absolute;
  left: 80rpx;
  top: 0;
  width: 75rpx;
  height: 32rpx;
}

.advisor-message .shadow {
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.15);
  padding-bottom: 40rpx;
}

.advisor-message .message {
  color: #333;
  font-size: 28rpx;
  line-height: 56rpx;
  padding: 40rpx 30rpx 0 30rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 83rpx 390rpx;
  background-position-x: 95%;
}

/* 选项卡 */

.tab-title {
  font-size: 28rpx;
  text-align: center;
  border-bottom: 1rpx solid #eaeaea;
}

.tab-title scroll-view {
  overflow: auto;
  white-space: nowrap;
}

.tab-title .scroll-x {
  display: flex;
  justify-content: space-around;
}

.tab-item {
  padding: 30rpx 0;
  border-bottom: 2rpx solid white;
  transition: all 0.5s;
}

.tab-item.active {
  color: #008d96;
  border-bottom: 2rpx solid #008d96;
}

.tab-content {
  padding: 40rpx;
}

/* 行程安排-时间轴 */

.schedule>.title {
  font-size: 54rpx;
  padding-bottom: 40rpx;
}

.schedule .tree {
  border-left: 2rpx solid #dadada;
  margin-left: 20rpx;
  padding-left: 40rpx;
}

.schedule .tree .li {
  margin-top: 30rpx;
}

.name-box, .date-box {
  display: flex;
  align-items: center;
}

.icon-calendar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background-color: white;
  box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.15);
  text-align: center;
  line-height: 58rpx;
  margin-left: -68rpx;
}

.icon-calendar image {
  width: 28rpx;
  height: 28rpx;
}

.name-box .name {
  margin-left: 18rpx;
  font-size: 36rpx;
}

.date-box {
  padding: 40rpx 0 20rpx;
}

.date-box .date {
  margin-left: 24rpx;
  font-size: 32rpx;
}

.icon-date {
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  background-color: white;
  box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.15);
  text-align: center;
  line-height: 30rpx;
  margin-left: -58rpx;
}

.icon-date .icon-shikebiao {
  font-size: 24rpx;
  color: #333;
}

.schedule .content-box {
  font-size: 28rpx;
}

.content-box image {
  width: 100%;
}

/* 底部工具 */

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1rpx solid #eee;
  text-align: center;
  font-size: 24rpx;
  padding: 16rpx 0;
}

.bottom-bar .iconfont {
  font-size: 40rpx;
}

.bottom-bar .btn {
  margin: 0;
  padding: 14rpx 60rpx;
  font-size: 36rpx;
  line-height: 56rpx;
  background-color: #4a90ce;
}

.container {
  padding: 10px;
}

.search-container {
  display: flex;
  margin: 10px 0;
}

.search-input {
  flex: 1;
  padding: 8px;
  border: 1px solid #C5A1F7;
  border-radius: 4px;
}

.search-button {
  padding: 8px 16px;
  background-color: #C5A1F7;
  color: white;
  border: none;
  border-radius: 4px;
  margin-left: 10px;
  font-size: 14px;
}

.filter-container {
  display: flex;
  justify-content: space-between;
  border-bottom: 3px solid #ddd; /* 添加底部边框 */
}

.filter-button {
  flex: 1; /* 将按钮设置为均分空间 */
  padding: 8px 0;
  background-color: white; /* 将按钮背景色设置为白色 */
  color: #666; /* 将文字颜色设置为灰色 */
  border: none;
  border-right: 1px solid #ddd; /* 添加右边框 */
  border-bottom: 3px solid transparent; /* 设置初始下方边框为透明 */
  border-radius: 0; /* 取消按钮圆角 */
  font-size: 14px;
  text-align: center; /* 文字居中 */
}

/* 将选中的选项卡下方横线设置为紫色 */
.filter-button.active {
  color: #C5A1F7;
  border-bottom-color: #C5A1F7;
}

.feedback-controls {
  display: flex;
  align-items: center;
  margin: 10px 0;
}

.order-button {
  padding: 3px 5px; /* 缩小按钮 */
  margin-left: auto; /* 居右 */
  background-color: #FFFFFF;
  color: #C5A1F7;
  border: none;
  border-radius: 4px;
  font-size: 12px;
}

.feedback-list {
  margin-top: 10px;
}

.feedback-card {
  padding: 10px;
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  margin-bottom: 10px;
}

.feedback-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.feedback-title {
  font-size: 16px;
  font-weight: bold;
}

.feedback-status {
  font-size: 14px;
}

.feedback-content {
  margin: 5px 0;
  color: #666;
  font-size: 14px;
}

.feedback-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.feedback-time {
  font-size: 12px;
  color: #999;
}

.view-feedback-button {
  padding: 5px 10px;
  background-color: #C5A1F7;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 12px;
}
.filter-option {
  display: flex;
  align-items: center;
  margin-right: 10px;
}

.filter-text {
  margin-left: 5px; /* 调整文字和勾选圆圈的间距 */
}

.filter-text.active {
  color: #C5A1F7; /* 选中时的文字颜色 */
}

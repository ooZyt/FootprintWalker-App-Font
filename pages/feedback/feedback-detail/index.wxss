/* feedback-detail.wxss */
.container {
  padding: 20px;
}

.feedback-details {
  border: 1px solid #ccc;
  padding: 20px;
  border-radius: 8px;
}

.feedback-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}

.feedback-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.feedback-time {
  font-size: 12px;
  color: #666;
  margin-bottom: 5px;
}

.feedback-content {
  margin-top: 10px;
  font-size: 16px;
  margin-bottom: 20px;
}

.activity-info {
  font-size: 12px;
  color: #666;
  margin-bottom: 5px;
}

.activity-value {
  font-size: 14px;
  margin-bottom: 10px;
}

.reply-info {
  margin-top: 20px;
  border-top: 1px solid #ccc;
  padding-top: 20px;

  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}

.reply-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
}

.reply-content {
  margin-top: 10px;
  font-size: 14px;
  margin-bottom: 10px;
}

.reply-time {
  font-size: 12px;
  color: #666;
}

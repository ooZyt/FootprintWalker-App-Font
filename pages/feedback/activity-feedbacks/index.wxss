/* 全局样式 */
.container {
  padding: 10px;
}

.header {
  display: flex;
  align-items: center;
  padding: 10px 0;
}

.home-button {
  font-size: 20px;
  background: none;
  border: none;
  color: #C5A1F7;
  margin-right: 10px;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.search-container {
  display: flex;
  margin: 10px 0;
}

.search-input {
  flex: 1;
  padding: 8px;
  border: 1px solid #C5A1F7;
  border-radius: 4px;
}

.search-button {
  padding: 6px 12px; /* 调整按钮大小 */
  background-color: #C5A1F7;
  color: white;
  border: none;
  border-radius: 4px;
  margin-left: 6px; /* 调整按钮间距 */
  font-size: 12px; /* 调整按钮字体大小 */
}

.filter-container {
  display: flex;
  justify-content: space-between;
  border-bottom: 3px solid #ddd; /* 添加底部边框 */
}

.filter-button {
  flex: 1; /* 将按钮设置为均分空间 */
  padding: 8px 0;
  background-color: white; /* 将按钮背景色设置为白色 */
  color: #666; /* 将文字颜色设置为灰色 */
  border: none;
  border-right: 1px solid #ddd; /* 添加右边框 */
  border-bottom: 3px solid transparent; /* 设置初始下方边框为透明 */
  border-radius: 0; /* 取消按钮圆角 */
  font-size: 14px;
  text-align: center; /* 文字居中 */
}

/* 将选中的选项卡下方横线设置为紫色 */
.filter-button.active {
  color: #C5A1F7;
  border-bottom-color: #C5A1F7;
}

.activity-controls {
  display: flex;
  align-items: center;
  margin: 10px 0;
}

.order-button {
  padding: 3px 5px; /* 缩小按钮 */
  margin-left: auto; /* 居右 */
  background-color: #FFFFFF;
  color: #C5A1F7;
  border: none;
  border-radius: 4px;
  font-size: 12px;
}

.activity-list {
  margin-top: 10px;
}

.activity-card {
  display: flex;
  padding: 10px;
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  margin-bottom: 10px;
}

.activity-image {
  width: 80px;
  height: 80px;
  border-radius: 4px;
  margin-right: 10px;
}

.activity-details {
  flex: 1;
}

.activity-title {
  font-size: 16px;
  font-weight: bold;
  display: block; /* 添加 display 属性 */
}

.activity-description {
  margin: 5px 0;
  color: #666;
  font-size: 14px;
  display: block; /* 添加 display 属性 */
}

.activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.activity-time {
  font-size: 12px;
  color: #999;
}

.feedback-button {
  padding: 5px 10px;
  background-color: #C5A1F7;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 12px;
}
